<div class="block block-cards">
  {% if include.block.title %}<h2>{{ include.block.title }}</h2>{% endif %}
  <div class="cards">
    {% for it in include.block.items %}
      <article class="card">
        <h3>{% if it.link %}<a href="{{ it.link }}">{{ it.title }}</a>{% else %}{{ it.title }}{% endif %}</h3>
        {% if it.meta %}<div class="meta">{{ it.meta }}</div>{% endif %}
        {% if it.desc %}<p>{{ it.desc }}</p>{% endif %}
      </article>
    {% endfor %}
  </div>
</div>
