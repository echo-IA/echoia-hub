<div class="block block-list">
  {% if include.block.title %}<h2>{{ include.block.title }}</h2>{% endif %}
  <ul>
    {% for it in include.block.items %}
      <li>
        {% if it.link %}<a href="{{ it.link }}">{{ it.title }}</a>{% else %}{{ it.title }}{% endif %}
        {% if it.desc %}<div class="desc">{{ it.desc }}</div>{% endif %}
      </li>
    {% endfor %}
  </ul>
</div>
